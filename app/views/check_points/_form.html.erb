<div class="box">
	<div class="box-header">
		<span class="title"><%= I18n.t('views.text.new') + I18n.t('activerecord.models.check_point')%></span>
	</div>
	<div class="box-content">
		<%= simple_form_for  check_point ,url:post_url, :html => { :class => 'form-horizontal' } do |f| %>
			<div class="padded separate-sections">
				<%= f.error_notification %>
				<%= f.error :base , :error_method => :to_sentence %>
				<fieldset>
					<%= f.input :content %>
				</fieldset>
			</div>
			<div class="form-actions">
				<%= f.button :submit , :class => 'btn btn-primary' %>
				<%= link_to '取消', template_path(check_point.template), :class => 'btn' %>
			</div>
		<% end %>
	</div>
</div>
