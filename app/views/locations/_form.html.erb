<% if location.new_record? %>
	<%= content_tag "div", id: "current-location" do%>
	<% end %>
<% else %>	
	<%= content_tag "div", id: "current-location",data:{:"current-location" => location} do %>
	<% end %>
<% end %>
<div class="box">
	<div class="box-header">
		<span class="title"><%= I18n.t('views.text.new') + I18n.t('activerecord.models.location')%></span>
	</div>
	<div class="box-content">
		<%= simple_form_for location , :html => { :class => 'form-horizontal'  } do |f| %>
			<div class="padded separate-sections">
				<%= f.error_notification %>
				<fieldset>
					<%= f.input :name %>
					<%= f.input :lng ,as: :string%>
					<%= f.input :lat ,as: :string%>
				</fieldset>
			</div>
			<div class="form-actions">
				<%= f.button :submit , :class => 'btn btn-primary' %>
				<%= link_to '取消', locations_path, :class => 'btn' %>
			</div>
		<% end %>
	</div>
</div>
