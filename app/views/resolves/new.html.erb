<%= simple_form_for [@issue,@resolve]  ,:html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_notification %>
	<fieldset>
		<%= f.input :desc %>
		<%= f.error :base , :error_method => :to_sentence %>
		<div class="form-actions">
			<%= f.button :submit , :class => 'btn btn-primary' %>
			<%= link_to '取消', quick_reports_path, :class => 'btn' %>
		</div>
	</fieldset>
<% end %>