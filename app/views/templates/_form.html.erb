<div class="box">
	<div class="box-header">
		<span class="title"><%= I18n.t('views.text.new') + I18n.t('activerecord.models.template')%></span>
	</div>
	<div class="box-content">
		<%= simple_form_for template , :html => { :class => 'form-horizontal'  } do |f| %>
			<div class="padded separate-sections">
				<%= f.error_notification %>
				<%= f.error :base , :error_method => :to_sentence %>
				<fieldset>
					<%= f.input :name %>
					<%= f.input :desc ,:input_html => {:rows=>5 }%>
				</fieldset>
			</div>
			<div class="form-actions">
				<%= f.button :submit , :class => 'btn btn-primary' %>
				<%= link_to '取消', templates_path, :class => 'btn' %>
			</div>
		<% end %>
	</div>
</div>
