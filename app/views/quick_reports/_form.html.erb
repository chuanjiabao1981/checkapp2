<%= simple_form_for @quick_report  ,:html => { :class => 'form-horizontal' } do |f| %>
	<%= f.error_notification %>
	<fieldset>
		<%= f.simple_fields_for :issue do |builder| %>

			<%= builder.input :desc %>
			<%= builder.input :level,collection: Issue::ISSUE_LEVEL_SET,:include_blank => false %>
			<%= builder.input :deadline %>
			<%= builder.association :responsible_person,
						collection: User.all,
						disabled:  ! @quick_report.issue.can_change_responsible_person? %>
			<% if (not @quick_report.issue.new_record?) && (not @quick_report.issue.state_event_collection.empty?) %>
				<%= builder.input :state_event,collection: @quick_report.issue.state_event_collection %>
			<% end %>
		<% end %>
  		<%= f.error :base %>
		<div class="form-actions">
			<%= f.button :submit , :class => 'btn btn-primary' %>
			<%= link_to '取消', quick_reports_path, :class => 'btn' %>
		</div>
	</fieldset>
<% end %>